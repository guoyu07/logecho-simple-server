doctype html
html
    head
        block title
            title title
        style.
            body { background: #eee; padding: 0; margin: 0; font-size: 13px; font-family: Consolas,Menlo,Monaco,"Courier New",monospace; color: #333 }
            .box { text-align: center; margin: 40px auto 0 auto; width: 500px }
            .box p { font-size: 15px }
            .box h1 { padding: 0 0 10px 0; margin: 0 0 40px 0; border-bottom: 1px solid #ccc}
            .box footer { margin-top: 20px }
            a { color: #999 }
            .box footer a { color: #c7254e }
            code { display: inline-block; padding: 3px; border: 1px solid #ccc }
    body
        .box
            block content
                p default
            footer <a href="http://logecho.com">Logecho</a>

